<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCustoViagemMaui.MainPage">

    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalTextAlignment" Value="Center"/>
            <Setter Property="VerticalOptions" Value="FillAndExpand"/>
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="Origem: "/>
            <Entry x:Name="txt_origem"/>

            <Label Text="Destino: "/>
            <Entry x:Name="txt_destino"/>

            <Label Text="Distância: "/>
            <Entry x:Name="txt_distancia"/>

            <Label Text="Rendimento: "/>
            <Entry x:Name="txt_rendimento"/>

            <Label Text="Combustível: "/>
            <Entry x:Name="txt_combustivel"/>


            <Button x:Name="btn_AddPed" Text="Adicionar Pedágio" Clicked="btn_AddPed_Clicked" HorizontalOptions="Center" Margin="10"/>
            <Button x:Name="btn_calc" Text="Calcular" Clicked="btn_calc_Clicked" HorizontalOptions="Center" Margin="10"/>
            <Button x:Name="btn_ListPed" Text="Lista Pedágio" Clicked="btn_ListPed_Clicked" HorizontalOptions="Center" Margin="10"/>
        </VerticalStackLayout>
    </ContentPage.Content>

</ContentPage>
